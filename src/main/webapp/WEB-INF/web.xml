<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>LogInServlet</servlet-name>
    <servlet-class>cars.controller.LogInServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogInServlet</servlet-name>
    <url-pattern>/logIn.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogOutServlet</servlet-name>
    <servlet-class>cars.controller.LogOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogOutServlet</servlet-name>
    <url-pattern>/logOut.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SignUpServlet</servlet-name>
    <servlet-class>cars.controller.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignUpServlet</servlet-name>
    <url-pattern>/signUp.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FetchAdsServlet</servlet-name>
    <servlet-class>cars.controller.FetchAdsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FetchAdsServlet</servlet-name>
    <url-pattern>/fetchAds</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FetchCarsServlet</servlet-name>
    <servlet-class>cars.controller.FetchCarsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FetchCarsServlet</servlet-name>
    <url-pattern>/fetchCars</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CreateAdServlet</servlet-name>
    <servlet-class>cars.controller.CreateAdServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateAdServlet</servlet-name>
    <url-pattern>/createAd</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdateAdStatusServlet</servlet-name>
    <servlet-class>cars.controller.UpdateAdStatusServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateAdStatusServlet</servlet-name>
    <url-pattern>/updateAdStatus</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteAdServlet</servlet-name>
    <servlet-class>cars.controller.DeleteAdServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteAdServlet</servlet-name>
    <url-pattern>/deleteAd</url-pattern>
  </servlet-mapping>

  <filter>
  <filter-name>EncodingFilter</filter-name>
  <filter-class>cars.filter.SetEncodingFilter</filter-class>
</filter>
  <filter-mapping>
  <filter-name>EncodingFilter</filter-name>
  <url-pattern>*</url-pattern>
</filter-mapping>
</web-app>
